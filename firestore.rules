rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Blog yazıları kuralı
    match /blog_posts/{post} {
      // Herkes yazıları okuyabilir
      allow read: if true;
      
      // Yazma işlemi için şimdilik kapalı tutuyoruz.
      // EĞER Firebase Auth kullanıyor olsaydınız:
      // allow write: if request.auth != null && request.auth.token.admin == true;
      
      // ŞU ANKİ DURUMDA (Şifreli giriş): 
      // Firestore kuralları şifre bazlı çalışamaz. Bu yüzden admin panelinden 
      // yazma yapabilmek için Firebase konsolunda 'Yazma' iznini geçici olarak (veya IP kısıtlamasıyla)
      // açık bırakmanız gerekir. 
      // TAVSİYE: Admin paneli için Firebase Authentication (E-posta/Şifre) kullanın.
      allow write: if false; 
    }
  }
}
